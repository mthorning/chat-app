doctype 5
html(lang='en')
  head
    meta(charset='UTF-8')
    title Create User
    style(type='text/css').
        .container {
            display: inline-block;
            margin-top: 80px;
        }
        .submit {
            float: right;
        }
        label {
            display: block;
            text-align: right;
        }
        .alert {
            margin: auto;
            left: 0;
            right: 0;
            position: absolute;
            max-width: 400px;
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: .75rem 1.25rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
            border-radius: .25rem;
            font-family: -apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif,'Apple Color Emoji','Segoe UI Emoji','Segoe UI Symbol';
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
        }

    body
        #message
            if message
                .alert #{message}
        .container
            form(action='/newUserEdit' method='post')
                table
                    tr
                        td
                            label(for='password1') Please choose a new password: 
                        td
                            input#password1(type='password' autocomplete="new-password" autofocus placeholder='Password' name='password1')
                    tr
                        td
                            label(for='password2') Please retype your password: 
                        td
                            input#password2(type='password' autocomplete="new-password" placeholder='Password' name='password2')
                    tr
                        td
                            label(for='displayName') Please chooose a display name: 
                        td
                            input#displayName(type='text' placeholder='Display Name' name='displayName')
                    tr
                        td
                        td
                            input.submit(type='submit' value='Submit')